# Azure Translator Service
# Required for language detection and translation features
# Get from: https://portal.azure.com/ > Azure AI services > Translator
AZURE_TRANSLATOR_KEY=your_translator_key_here
AZURE_TRANSLATOR_ENDPOINT=your_translator_endpoint_here

# OpenAI API
# Required for AI responses and health analysis
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here
# Optional: Set specific model to use
OPENAI_MODEL=gpt-4-turbo

# Azure Language Service
# Required for health entity recognition
# Get from: https://portal.azure.com/ > Azure AI services > Language Service
AZURE_LANGUAGE_KEY=your_language_key_here
AZURE_LANGUAGE_ENDPOINT=your_language_endpoint_here

# Server Configuration
# Optional: Configure the server port (default: 5000)
PORT=5000
# Optional: Set to False in production
DEBUG=True

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=healthmate.log